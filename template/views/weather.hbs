    <script>
       
         const getCurrentDateTime = ()=> {
        let dayname = document.getElementById('day');
          let today_data = document.getElementById('today_data');
        var now = new Date();
        var month = now.toLocaleString('default', { month: 'short' });
        var day = String(now.getDate()).padStart(2, '0');
        var weekday = now.toLocaleString("default", { weekday: "long" });
        var time = now.toLocaleString('en-US', { hour: 'numeric', minute: 'numeric', hour12: true });
        var final = day +' | ' + month;
        dayname.innerHTML = weekday;
        today_data.innerHTML = final;
    }
        getCurrentDateTime();
    </script>
